<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <filter>
        <filter-name>TomcatFilter</filter-name>
        <filter-class>com.rex.filter.TomcatFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TomcatFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>SimpleServlet</servlet-name>
        <servlet-class>com.rex.servlet.SimpleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleServlet</servlet-name>
        <url-pattern>/rex</url-pattern>
    </servlet-mapping>

</web-app>
